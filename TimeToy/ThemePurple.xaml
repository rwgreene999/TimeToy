<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Purple: deep violet surfaces, vivid purple accents -->
    <Color x:Key="WindowBackgroundColor">#FF77448f</Color>       <!-- deep purple -->
    <Color x:Key="WindowForegroundColor">#FFFAF9FF</Color>       <!-- near-white -->

    <!-- Primary / accents -->
    <Color x:Key="PrimaryColor">#FF7C4DFF</Color>                <!-- vivid purple -->
    <Color x:Key="PrimaryLightColor">#FFEBDCFF</Color>
    <Color x:Key="PrimaryDarkColor">#FF4A1B99</Color>
    <Color x:Key="AccentColor">#FFDB4CBE</Color>                 <!-- magenta/fuchsia -->
    <Color x:Key="AccentDarkColor">#FF9B2F74</Color>

    <!-- Surface / neutrals -->
    <Color x:Key="BackgroundColor">#FF1A0F1F</Color>
    <Color x:Key="SurfaceColor">#FF291B33</Color>
    <Color x:Key="ElevatedSurfaceColor">#FF35243F</Color>

    <!-- Text palettes -->
    <Color x:Key="TextColor">#FFFAF9FF</Color>
    <Color x:Key="MutedTextColor">#FFBFA8D6</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
    <SolidColorBrush x:Key="WindowForegroundBrush" Color="{StaticResource WindowForegroundColor}" />

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}" />

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="ElevatedSurfaceBrush" Color="{StaticResource ElevatedSurfaceColor}" />

    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}" />

    <LinearGradientBrush x:Key="WindowBackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource WindowBackgroundColor}" Offset="0" />
        <GradientStop Color="#FF140A17" Offset="1" />
    </LinearGradientBrush>

</ResourceDictionary>