<Window x:Class="TimeToy.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:TimeToy"
       mc:Ignorable="d"
       Title="Time Toy" Height="450" Width="800">
   <Grid>
       <Grid.Background>
           <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
               <GradientStop Color="#FF2196F3" Offset="0"/>
               <GradientStop Color="#FF21CBF3" Offset="1"/>
           </LinearGradientBrush>
       </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Timer" Width="200" Height="40" Margin="0,0,0,16" Click="Timer_Click" HorizontalAlignment="Left"/>
            <Button Content="Stop Watch" Width="200" Height="40" Margin="0,0,0,16" Click="StopWatch_Click" HorizontalAlignment="Left"/>
            <Button Content="Alarm" Width="200" Height="40" Click="Alarm_Click" HorizontalAlignment="Left"/>
        </StackPanel>
        <TextBox x:Name="OutputTextBox"
         Grid.Column="1"
         Margin="16"
         VerticalScrollBarVisibility="Auto"
         HorizontalScrollBarVisibility="Auto"
         IsReadOnly="True"
         TextWrapping="Wrap"
         FontFamily="Consolas"
         FontSize="14"
         AcceptsReturn="True"/>
    </Grid>
</Window>
