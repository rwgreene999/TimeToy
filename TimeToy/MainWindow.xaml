<Window x:Class="TimeToy.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:TimeToy"
      mc:Ignorable="d"      
      Title="Time Toy" Height="250" Width="400"
        Background="{DynamicResource WindowBackgroundGradient}" Foreground="{DynamicResource WindowForegroundBrush}"
        >
   
   <Window.Resources>
       <local:FontSizerConverter x:Key="StopWatcherConverter"/>
   </Window.Resources>

   <Grid>
        <Grid.ColumnDefinitions>
           <ColumnDefinition Width="250"/>
           <ColumnDefinition Width="*"/>
       </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0">
           <Button Content="Timer" Width="200" Height="40" Margin="0,0,0,12" 
                   Click="Timer_Click" HorizontalAlignment="Left"
                   ToolTip="Click to start a timer and get notified when it is finished, think Kitchen Timer"
                   />
           <Button Content="Stop Watch" Width="200" Height="40" Margin="0,0,0,12" 
                   Click="StopWatch_Click" HorizontalAlignment="Left"
                   ToolTip="Click to start action duration timer with optional countdown"
                   />
           <Button Content="Alarm" Width="200" Height="40" Margin="0,0,0,12"
                   Click="Alarm_Click" HorizontalAlignment="Left"/>
                   
           <Button Content="Options" Width="200" Height="40" Margin="0,0,0,12"
                   Click="Options_Click" HorizontalAlignment="Left"/>
                   
       </StackPanel>
       <TextBox x:Name="OutputTextBox"
                Background="{DynamicResource SurfaceBrush}"
                Foreground="{DynamicResource TextBrush}"
                BorderBrush="{DynamicResource PrimaryDarkBrush}"

        Grid.Column="1"
        Margin="16"
        VerticalScrollBarVisibility="Auto"
        HorizontalScrollBarVisibility="Auto"
        IsReadOnly="True"
        TextWrapping="Wrap"
                Text="This is a Work In Progress, thinsg are being added and fixed all the time"
        FontFamily="Consolas"
        FontSize="14"
        AcceptsReturn="True"/>
        <TextBlock x:Name="RunVersion" Text="version" FontWeight="Bold" Grid.Row="1" FontSize="8" Margin="20,0,0,0"/>
    </Grid>
</Window>
