<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark theme: deep backgrounds, light text, subtle accent -->
    <Color x:Key="WindowBackgroundColor">#FF121212</Color>
    <Color x:Key="WindowForegroundColor">#FFFFFFFF</Color>

    <!-- Primary / accents -->
    <Color x:Key="PrimaryColor">#FF3A82BF</Color>
    <Color x:Key="PrimaryLightColor">#FF66A3E0</Color>
    <Color x:Key="PrimaryDarkColor">#FF204E78</Color>
    <Color x:Key="AccentColor">#FF8FBF5F</Color>
    <Color x:Key="AccentDarkColor">#FF5B8A3B</Color>

    <!-- Surface / neutrals -->
    <Color x:Key="BackgroundColor">#FF121212</Color>
    <Color x:Key="SurfaceColor">#FF1E1E1E</Color>
    <Color x:Key="ElevatedSurfaceColor">#FF262626</Color>

    <!-- Text palettes -->
    <Color x:Key="TextColor">#FFC7C7C7</Color>
    <Color x:Key="MutedTextColor">#FF9E9E9E</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
    <SolidColorBrush x:Key="WindowForegroundBrush" Color="{StaticResource WindowForegroundColor}" />

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}" />

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="ElevatedSurfaceBrush" Color="{StaticResource ElevatedSurfaceColor}" />

    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}" />

    <!-- Optional subtle window gradient -->
    <LinearGradientBrush x:Key="WindowBackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource WindowBackgroundColor}" Offset="0" />
        <GradientStop Color="#FF0B0B0B" Offset="1" />
    </LinearGradientBrush>

    <!-- Ensure RadioButton content is readable in the Forest theme -->
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
    </Style>


</ResourceDictionary>