<Window x:Class="TimeToy.OptionsManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TimeToy"
        Title="TimeToy Options" Height="500" Width="400"
        Background="{DynamicResource WindowBackgroundBrush}" Foreground="{DynamicResource WindowForegroundBrush}"
        >


    <Grid Margin="0,0,0,0">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color= "Goldenrod" Offset="0"/>
                <GradientStop Color="#7FF3AA21" Offset="5"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0" Grid.Row="0">
        
        <StackPanel Margin="20" VerticalAlignment="Top" >

            <StackPanel >
                <!-- Main TextBox -->
                <TextBlock Text="Timer's Notification Options " FontWeight="Bold"/>

                <!-- Radio Buttons -->
                <StackPanel Orientation="Horizontal" Margin="20,5,0,4">
                    <TextBlock Margin="0,0,8,0" Text="Notification Voice or Sound:"/>
                    <RadioButton x:Name="VoiceRadio" Content="Voice" GroupName="Mode" Margin="0,0,16,0"
                         Checked="Radio_Checked2" />
                    <RadioButton x:Name="MusicRadio" Content="Music" GroupName="Mode"
                         Checked="Radio_Checked2"/>

                </StackPanel>

                <!-- Voice Options -->
                <StackPanel x:Name="VoicePanel" Margin="20,0,0,4">
                    <TextBlock Text="What should the voice say?" Margin="0,0,0,4"/>
                    <TextBox x:Name="VoiceTextBox" Width="300" Margin="0,0,0,8"/>
                    <TextBlock Text="Select computer voice:" Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Test Voice" Width="100" Click="VoiceTest_Click" Margin="0,0,12,0"/>
                        <ComboBox x:Name="VoiceComboBox" Width="300" />
                    </StackPanel>
                    
                    
                </StackPanel>

                <!-- Music Options -->
                <!-- <StackPanel x:Name="MusicPanel" Visibility="Collapsed" Margin="20,0,0,4"> -->
                <StackPanel x:Name="MusicPanel" Visibility="Collapsed" Margin="20,0,0,4">
                    <TextBlock Text="Select music file:" Margin="0,0,0,4"/>
                    <TextBox x:Name="MusicFileTextBox" Width="300" IsReadOnly="True"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Browse for file" Width="100" Margin="8,0,0,0" Click="MusicBrowse_Click"/>
                        <Button Content="Test Music" Width="100" Margin="8,0,0,0" Click="MusicTest_Click"/>
                    </StackPanel>
                </StackPanel>

            </StackPanel>


            <StackPanel Orientation="Horizontal" Margin="0,10,0,16" >
                
                <StackPanel >
                    <TextBlock Text="StopWatch Options " FontWeight="Bold"/>
                    <StackPanel Margin="20,5,0,4">
                        <TextBlock Text="Select computer voice:" Margin="0,0,0,4"/>
                        <ComboBox x:Name="StopWatchComboBox" Width="200" Margin="0,0,0,8"/>
                        <TextBlock Text="Speaking volume" />
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,8">
                            <Slider x:Name="StopWatchVolumeSlider" Minimum="0" Maximum="100" 
                                    Value="100" Width="150" 
                                    TickFrequency="10" IsSnapToTickEnabled="True" 
                                    ToolTip="Set how much of your windows volumn to use"                                     
                                    />
                            <TextBlock Text="{Binding ElementName=StopWatchVolumeSlider, Path=Value, StringFormat=' {0}%'}" VerticalAlignment="Center" Margin="8,0,0,0"
                                       ToolTip="Current speaking volume percentage."/>
                            <Button Content="Test Voice" Width="100" Click="StopWatchTest_Click" />
                        </StackPanel>
                    </StackPanel>
                    
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,16" >
                <StackPanel >
                    <TextBlock Text="Theme" FontWeight="Bold"/>
                    <StackPanel Margin="20,5,0,4" Orientation="Horizontal">
                        <TextBlock Text="Select color theme:" Margin="0,0,10,4"/>
                        <RadioButton x:Name="ThemeDark" Content="Dark" GroupName="Theme" 
                                     Margin="0,0,16,0" Checked="ThemeDark_Checked"/>
                        <RadioButton x:Name="ThemeLight" Content="Light" GroupName="Theme" 
                                     Margin="0,0,16,0" Checked="ThemeLight_Checked"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,16" >
                <StackPanel>
                    <StackPanel.ToolTip>
                        <TextBlock>
                        "Save: Apply changes, save configuration and return to app.
                            <LineBreak/>
                         Cancel: Discard changes and return to app.
                            <LineBreak/>
                         Keep: Keep changes in app until app is closed."
                        </TextBlock>
                    </StackPanel.ToolTip>

                    <TextBlock Text="Change Option" FontWeight="Bold"/>
                    <StackPanel Margin="20,5,0,4" Orientation="Horizontal">
                        <Button Content="Save" Width="100" Click="SaveAll_Click"  ToolTip="Save changes and exit"/>
                        <Button Content="Cancel" Width="100" Click="Cancel_Click" ToolTip="Cancel changes and exit"/>
                        <Button Content="Keep" Width="100" Click="Keep_Click" ToolTip="Keep changes this run, but dont save them."/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        </ScrollViewer>
        <TextBlock x:Name="RunVersion" Text="version" FontWeight="Bold" Grid.Row="1" FontSize="8" Margin="20,0,0,0"/>
    </Grid>
</Window>
