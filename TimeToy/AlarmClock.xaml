<Window x:Class="TimeToy.AlarmClock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Alarm Clock"
        Height="460" Width="420"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
 Background="{DynamicResource WindowBackgroundGradient}" Foreground="{DynamicResource WindowForegroundBrush}"
        >

  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Text="Alarm Clock --==) NOT IMPLEMENTED YET (==--  " FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>

    <!-- Full UI -->
    <ScrollViewer Grid.Row="1" Name="FullPanel" VerticalScrollBarVisibility="Auto">
      <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="0,4,0,0" >
        <StackPanel Orientation="Horizontal" Margin="0,4">
          <TextBlock Width="90" VerticalAlignment="Center">Title:</TextBlock>
          <TextBox Name="TitleTextBox" Width="280"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,4">
          <TextBlock Width="90" VerticalAlignment="Center">Date (optional):</TextBlock>
          <DatePicker Name="DatePicker" SelectedDate="{x:Static sys:DateTime.Now}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,4">
          <TextBlock Width="90" VerticalAlignment="Center">Time:</TextBlock>
          <ComboBox Name="HourCombo" Width="70" Margin="0,0,6,0"/>
          <ComboBox Name="MinuteCombo" Width="70" Margin="0,0,6,0"/>
          <ComboBox Name="AmPmCombo" Width="70"/>
        </StackPanel>

        <GroupBox Header="Repeat" Margin="0,8,0,0">
          <StackPanel>
            <RadioButton Name="RepeatNone" Content="None" Checked="RepeatOption_Checked"/>
            <RadioButton Name="RepeatDaily" Content="Daily" Checked="RepeatOption_Checked"/>
            <RadioButton Name="RepeatWeekdays" Content="Weekdays (Mon-Fri)" Checked="RepeatOption_Checked"/>
            <StackPanel Orientation="Horizontal">
              <RadioButton Name="RepeatWeekly" Content="Weekly" Checked="RepeatOption_Checked"/>
              <ComboBox Name="WeeklyDayCombo" Width="120" Margin="8,0,0,0"/>
            </StackPanel>
          </StackPanel>
        </GroupBox>

        <GroupBox Header="Notification" Margin="0,8,0,0">
          <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4">
              <RadioButton Name="VoiceRadio" Content="Voice" Checked="NotifOption_Checked"/>
              <RadioButton Name="MusicRadio" Content="Music" Margin="12,0,0,0" Checked="NotifOption_Checked"/>
            </StackPanel>
            <StackPanel Name="VoicePanel" Margin="6,4,0,0">
              <StackPanel Orientation="Horizontal" Margin="0,2">
                <TextBlock Width="90" VerticalAlignment="Center">Voice:</TextBlock>
                <ComboBox Name="VoiceCombo" Width="240"/>
              </StackPanel>
              <StackPanel Orientation="Horizontal" Margin="0,2">
                <TextBlock Width="90" VerticalAlignment="Center">Message:</TextBlock>
                <TextBox Name="VoiceTextBox" Width="240"/>
              </StackPanel>
              <Button Name="VoiceTestButton" Content="Test Voice" Width="100" Margin="90,6,0,0" Click="VoiceTestButton_Click"/>
            </StackPanel>

            <StackPanel Name="MusicPanel" Margin="6,4,0,0" Visibility="Collapsed">
              <StackPanel Orientation="Horizontal" Margin="0,2">
                <TextBlock Width="90" VerticalAlignment="Center">File:</TextBlock>
                <TextBox Name="MusicFileTextBox" Width="200"/>
                <Button Content="Browse..." Width="60" Margin="6,0,0,0" Click="MusicBrowse_Click"/>
              </StackPanel>
              <Button Name="MusicTestButton" Content="Test Music" Width="100" Margin="90,6,0,0" Click="MusicTestButton_Click"/>
            </StackPanel>
          </StackPanel>
        </GroupBox>

      </StackPanel>
    </ScrollViewer>

    <!-- Compact UI shown after Go -->
    <Border Grid.Row="1" Name="CompactPanel" Visibility="Collapsed" CornerRadius="6" BorderThickness="1" Padding="12"
            Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource PrimaryDarkBrush}">
      <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Name="CompactTitleText" FontSize="16" FontWeight="Bold" TextAlignment="Center"/>
        <TextBlock Name="CompactTimeText" FontSize="14" Margin="0,6,0,0" TextAlignment="Center"/>
      </StackPanel>
    </Border>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
      <Button Name="GoButton" Content="Go" Width="80" Margin="6" Click="GoButton_Click"/>
      <Button Name="StopButton" Content="Stop" Width="80" Margin="6" Click="StopButton_Click" IsEnabled="False"/>
      <Button Name="CloseButton" Content="Close" Width="80" Margin="6" Click="CloseButton_Click"/>
    </StackPanel>
  </Grid>
</Window>