<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Southwest: warm adobe, sand and turquoise accent -->
    <Color x:Key="WindowBackgroundColor">#FF2E1B12</Color>       <!-- deep adobe -->
    <Color x:Key="WindowForegroundColor">#FFFFF8F0</Color>       <!-- warm off-white -->

    <!-- Primary / accents -->
    <Color x:Key="PrimaryColor">#FFC1440E</Color>                <!-- burnt orange -->
    <Color x:Key="PrimaryLightColor">#FFFFC9A1</Color>
    <Color x:Key="PrimaryDarkColor">#FF8B2E00</Color>
    <Color x:Key="AccentColor">#FF34B3A0</Color>                 <!-- turquoise -->
    <Color x:Key="AccentDarkColor">#FF1E796F</Color>

    <!-- Surface / neutrals -->
    <Color x:Key="BackgroundColor">#FF2E1B12</Color>
    <Color x:Key="SurfaceColor">#FF402E25</Color>
    <Color x:Key="ElevatedSurfaceColor">#FF4C352D</Color>

    <!-- Text palettes -->
    <Color x:Key="TextColor">#FFFFF8F0</Color>
    <Color x:Key="MutedTextColor">#FFD9CFC6</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
    <SolidColorBrush x:Key="WindowForegroundBrush" Color="{StaticResource WindowForegroundColor}" />

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}" />

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="ElevatedSurfaceBrush" Color="{StaticResource ElevatedSurfaceColor}" />

    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}" />

    <!-- Optional subtle window gradient -->
    <LinearGradientBrush x:Key="WindowBackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource WindowBackgroundColor}" Offset="0" />
        <GradientStop Color="#FF29160F" Offset="1" />
    </LinearGradientBrush>

    <!-- Ensure RadioButton content is readable in the Forest theme -->
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
    </Style>


</ResourceDictionary>