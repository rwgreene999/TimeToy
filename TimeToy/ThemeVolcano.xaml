<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Volcano theme: dark ash surfaces with molten lava accents -->
    <!-- Core window colors -->
    <Color x:Key="WindowBackgroundColor">#FF120706</Color>   <!-- deep ash -->
    <Color x:Key="WindowForegroundColor">#FFFFF7F3</Color>   <!-- warm off-white -->

    <!-- Primary / accents (lava, ember, glow) -->
    <Color x:Key="PrimaryColor">#FFDD4A2E</Color>            <!-- molten orange -->
    <Color x:Key="PrimaryLightColor">#FFFF8A65</Color>       <!-- lava highlight -->
    <Color x:Key="PrimaryDarkColor">#FF9A2A18</Color>        <!-- cooled lava -->
    <Color x:Key="AccentColor">#FFFFC107</Color>             <!-- ember yellow -->
    <Color x:Key="AccentDarkColor">#FFC77800</Color>

    <!-- Surface / neutrals -->
    <Color x:Key="BackgroundColor">#FF120706</Color>
    <Color x:Key="SurfaceColor">#FF2A1513</Color>
    <Color x:Key="ElevatedSurfaceColor">#FF3A1F1D</Color>

    <!-- Text palettes -->
    <Color x:Key="TextColor">#FFFFF7F3</Color>
    <Color x:Key="MutedTextColor">#FFBDA8A3</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
    <SolidColorBrush x:Key="WindowForegroundBrush" Color="{StaticResource WindowForegroundColor}" />

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}" />

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="ElevatedSurfaceBrush" Color="{StaticResource ElevatedSurfaceColor}" />

    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}" />

    <!-- Themed gradient for larger areas -->
    <LinearGradientBrush x:Key="WindowBackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource WindowBackgroundColor}" Offset="0" />
        <GradientStop Color="#FF2A0E0D" Offset="0.6" />
        <GradientStop Color="#FF0A0505" Offset="1" />
    </LinearGradientBrush>
    
    <!-- Ensure RadioButton content is readable in the Forest theme -->
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
    </Style>


</ResourceDictionary>