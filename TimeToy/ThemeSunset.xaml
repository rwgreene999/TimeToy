<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Sunset theme: warm oranges, magentas and deep twilight surfaces -->
    <!-- Core window colors -->
    <Color x:Key="WindowBackgroundColor">#FF2A052A</Color>
    <!-- deep plum / twilight -->
    <Color x:Key="WindowForegroundColor">#FFFFF7F3</Color>
    <!-- warm off-white -->

    <!-- Primary / accents -->
    <Color x:Key="PrimaryColor">#FFFF6A3A</Color>
    <!-- sunset orange -->
    <Color x:Key="PrimaryLightColor">#FFFFB27A</Color>
    <!-- soft peach highlight -->
    <Color x:Key="PrimaryDarkColor">#FFB24B2B</Color>
    <!-- darker orange -->
    <Color x:Key="AccentColor">#FFFF3E8E</Color>
    <!-- magenta/pink accent -->
    <Color x:Key="AccentDarkColor">#FFB22B6B</Color>

    <!-- Surface / neutrals -->
    <Color x:Key="BackgroundColor">#FF2A052A</Color>
    <Color x:Key="SurfaceColor">#FF3C173C</Color>
    <Color x:Key="ElevatedSurfaceColor">#FF4E264F</Color>

    <!-- Text palettes -->
    <Color x:Key="TextColor">#FFFFF7F3</Color>
    <Color x:Key="MutedTextColor">#FFD9B0A8</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
    <SolidColorBrush x:Key="WindowForegroundBrush" Color="{StaticResource WindowForegroundColor}" />

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}" />

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="ElevatedSurfaceBrush" Color="{StaticResource ElevatedSurfaceColor}" />

    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}" />

    <!-- Gradient for larger window areas (top = warm sky, bottom = twilight) -->
    <LinearGradientBrush x:Key="WindowBackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource PrimaryLightColor}" Offset="0" />
        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0.45" />
        <GradientStop Color="{StaticResource WindowBackgroundColor}" Offset="1" />
    </LinearGradientBrush>

    <!-- Ensure common controls use readable text under this theme -->
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
    </Style>

</ResourceDictionary>