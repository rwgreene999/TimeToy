<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Forest theme: dark pine background, soft light text, leaf accents -->
    <!-- Core colors -->
    <Color x:Key="WindowBackgroundColor">#FF09261C</Color>
    <!-- Deep pine -->
    <Color x:Key="WindowForegroundColor">#FFE6F2EA</Color>
    <!-- Pale leaf / off-white -->

    <!-- Primary / accents -->
    <Color x:Key="PrimaryColor">#FF2E7D59</Color>
    <!-- Forest green -->
    <Color x:Key="PrimaryLightColor">#FF66A884</Color>
    <!-- Fern light -->
    <Color x:Key="PrimaryDarkColor">#FF15402B</Color>
    <!-- Dark pine -->
    <Color x:Key="AccentColor">#FF8FBF5F</Color>
    <!-- Leaf highlight -->
    <Color x:Key="AccentDarkColor">#FF5B8A3B</Color>
    <!-- Deep leaf -->

    <!-- Neutrals / surfaces -->
    <Color x:Key="BackgroundColor">#FF0E2A1F</Color>
    <!-- same as window bg -->
    <Color x:Key="SurfaceColor">#FF1E3B31</Color>
    <!-- mossy surface -->
    <Color x:Key="ElevatedSurfaceColor">#FF2A453D</Color>
    <!-- elevated surface -->

    <!-- Text palettes -->
    <Color x:Key="TextColor">#FFE6F2EA</Color>
    <!-- readable light text -->
    <Color x:Key="MutedTextColor">#FF9BB7A7</Color>
    <!-- muted text -->

    <!-- Brushes (use DynamicResource in XAML where appropriate) -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
    <SolidColorBrush x:Key="WindowForegroundBrush" Color="{StaticResource WindowForegroundColor}" />

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}" />

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="ElevatedSurfaceBrush" Color="{StaticResource ElevatedSurfaceColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}" />

    <!-- Optional: subtle gradient for larger areas (can be used by windows or panels) -->
    <LinearGradientBrush x:Key="WindowBackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource WindowBackgroundColor}" Offset="0" />
        <GradientStop Color="#FF0B231A" Offset="1" />
    </LinearGradientBrush>

    <!-- Ensure RadioButton content is readable in the Forest theme -->
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
    </Style>

</ResourceDictionary>